{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "post_number": {
      "type": "integer",
      "minimum": 1,
      "description": "esa.io post number (required for updates, omit for new posts)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Post title (max 255 bytes, cannot contain /, fullwidth parentheses （）, or fullwidth colon ：)"
    },
    "category": {
      "type": "string",
      "minLength": 1,
      "description": "Category path (must match allowed categories and end with /yyyy/mm/dd format, e.g., LLM/Tasks/2025/01/18)"
    },
    "body": {
      "type": "object",
      "properties": {
        "background": {
          "type": "string",
          "minLength": 1,
          "description": "Task background description (plain text only, do not include '## 背景' header as it will be added automatically)"
        },
        "related_links": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "Related links (optional)"
        },
        "tasks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1,
                "description": "Unique task identifier"
              },
              "title": {
                "type": "string",
                "minLength": 1,
                "description": "Task title"
              },
              "status": {
                "type": "string",
                "enum": ["not_started", "in_progress", "in_review", "completed"],
                "description": "Task status"
              },
              "description": {
                "type": "string",
                "minLength": 1,
                "description": "Task description"
              }
            },
            "required": ["id", "title", "status", "description"],
            "additionalProperties": false
          },
          "description": "Task list (required)"
        }
      },
      "required": ["background", "tasks"],
      "additionalProperties": false,
      "description": "Post body (structured format)"
    }
  },
  "required": ["name", "category", "body"],
  "additionalProperties": false
}
