{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "create_new": {
      "type": "boolean",
      "description": "Set to true for new post creation (cannot be used with post_number)"
    },
    "post_number": {
      "type": "integer",
      "minimum": 1,
      "description": "esa.io post number for updates (cannot be used with create_new)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Post title (max 255 bytes, cannot contain /, fullwidth parentheses （）, or fullwidth colon ：)"
    },
    "category": {
      "type": "string",
      "minLength": 1,
      "description": "Category path (must match allowed categories and end with /yyyy/mm/dd format, e.g., LLM/Tasks/2025/01/18)"
    },
    "body": {
      "type": "object",
      "properties": {
        "background": {
          "type": "string",
          "minLength": 1,
          "description": "Task background description (plain text only, do not include '## 背景' header as it will be added automatically. Cannot contain heading markers # or ## at the beginning of lines.)"
        },
        "related_links": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "Related links (optional)"
        },
        "tasks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1,
                "description": "Unique task identifier"
              },
              "title": {
                "type": "string",
                "minLength": 1,
                "description": "Task title"
              },
              "status": {
                "type": "string",
                "enum": ["not_started", "in_progress", "in_review", "completed"],
                "description": "Task status (will be automatically formatted as 'Status: {status}' in markdown)"
              },
              "summary": {
                "type": "array",
                "items": {
                  "type": "string",
                  "maxLength": 140
                },
                "minItems": 1,
                "maxItems": 3,
                "description": "Task summary (1-3 bullet points, each max 140 characters)"
              },
              "description": {
                "type": "string",
                "minLength": 1,
                "description": "Task description (do not include status or title as they are automatically generated. Cannot contain heading markers #, ##, or ### at the beginning of lines.)"
              },
              "github_urls": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "uri"
                },
                "description": "GitHub PR/Issue URLs (optional, must be https://github.com/...)"
              }
            },
            "required": ["id", "title", "status", "summary", "description"],
            "additionalProperties": false
          },
          "description": "Task list (required)"
        }
      },
      "required": ["background", "tasks"],
      "additionalProperties": false,
      "description": "Post body (structured format)"
    }
  },
  "required": ["name", "category", "body"],
  "oneOf": [
    {
      "properties": {
        "create_new": {
          "const": true
        }
      },
      "required": ["create_new"]
    },
    {
      "required": ["post_number"]
    }
  ],
  "additionalProperties": false
}
